<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background_color"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_background_color"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/confirmation_heading"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgrey"
            android:padding="10dp">

            <ImageView
                android:id="@+id/capture_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/profile_camera"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/registered_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/capture_pic"
                android:padding="10dp"
                android:text="Mr. Adarsh Kumar Mishra"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/edit_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/edit_icon"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/registered_gender"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/registered_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/lightgrey"/>

        <LinearLayout
            android:id="@+id/dob_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/registered_dateofbirth"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/registered_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>

        <View
            android:id="@+id/dob_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/lightgrey"/>

        <LinearLayout
            android:id="@+id/age_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/registered_approximateage"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/registered_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>

        <View
            android:id="@+id/age_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/lightgrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/registered_mobilenumber"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/registered_mobileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/lightgrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/registered_emailaddress"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/registered_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/state_label"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/registered_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/city_label"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/registered_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirm_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/login_background_color"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/lightgrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <CheckBox
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:buttonTint="@android:color/darker_gray"

                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/termcondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="By registering with us You agree to our Privacy Policy and Terms &amp; Conditions"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/lightgrey"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:hint="@string/referalcode"
            android:padding="8dp"
            android:textColor="@color/HeaderTitleColor"
            android:textColorHint="@color/list_group_title"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/mconfirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/lightblue"
            android:clickable="true"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/hidePopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progress_frame_layout"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <include layout="@layout/salutation"/>
    </LinearLayout>
</RelativeLayout>