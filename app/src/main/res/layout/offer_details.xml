<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/myreportHID"
        layout="@layout/header_myreport" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myreportHID">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/avail_label"
                    android:textColor="@color/HeaderTitleColor"
                    android:textSize="@dimen/fifteen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ten"

                    android:text="@string/protect_your_self_label"
                    android:textColor="@color/lightblue"
                    android:textSize="@dimen/twenty" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ten"
                    android:padding="@dimen/twenty"

                    android:text="@string/diabetes_label"
                    android:textColor="@color/HeaderTitleColor"
                    android:textSize="@dimen/fifteen" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ten"
                    android:padding="@dimen/twenty"

                    android:text="@string/diabetes_label"
                    android:textColor="@color/HeaderTitleColor"
                    android:textSize="@dimen/fifteen" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ten"
                    android:padding="@dimen/twenty"

                    android:text="@string/diabetes_label"
                    android:textColor="@color/HeaderTitleColor"
                    android:textSize="@dimen/fifteen" />


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomLLID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/five">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ten"
                android:padding="@dimen/ten"
                android:text="@string/book_test"
                android:textColor="@color/lightblue"
                android:textSize="@dimen/fifteen" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty">

            <LinearLayout
                android:id="@+id/circle1LLID"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/twenty"
                android:background="@drawable/total_test_circle"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/rupee_symbol_with_amount"
                    android:textColor="@color/white"

                    android:textSize="@dimen/fifteen" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/circle1LLID"
                android:layout_alignRight="@id/circle1LLID"
                android:layout_below="@+id/circle1LLID"
                android:layout_marginTop="@dimen/twenty"
                android:gravity="center"
                android:text="@string/total_test_price"
                android:textColor="@color/total_test_price_color" />

            <LinearLayout
                android:id="@+id/circle2LLID"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/offer_circle"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/rupee_symbol_with_amount"
                    android:textColor="@color/white"

                    android:textSize="@dimen/fifteen" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/circle2LLID"
                android:layout_alignRight="@id/circle2LLID"
                android:layout_below="@+id/circle2LLID"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/twenty"
                android:gravity="center"
                android:text="@string/offer_price"
                android:textColor="@color/offer_price_color" />

            <LinearLayout
                android:id="@+id/circle3LLID"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/you_save_circle"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/rupee_symbol_with_amount"
                    android:textColor="@color/white"

                    android:textSize="@dimen/fifteen" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/circle3LLID"
                android:layout_alignRight="@id/circle3LLID"
                android:layout_below="@+id/circle3LLID"
                android:layout_marginTop="@dimen/twenty"
                android:gravity="center"
                android:text="@string/total_test_price"
                android:textColor="@color/you_save_color" />
        </RelativeLayout>


        <Button
            android:id="@+id/trackBTNID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkblue"
            android:padding="@dimen/five"
            android:text="@string/book_now"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/five"
            android:textColor="@color/white"
            android:textSize="@dimen/fifteen" />


    </LinearLayout>
</RelativeLayout>