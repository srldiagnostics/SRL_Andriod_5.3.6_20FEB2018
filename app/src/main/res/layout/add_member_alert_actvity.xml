<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:attrs="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/five"
            android:orientation="vertical"
            android:padding="@dimen/ten">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="@string/if_member_label"
                android:textColor="@color/HeaderTitleColor"
                android:textSize="@dimen/txt_size_book_now"
                attrs:TypeFace="@string/Bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zeropointfive"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:gravity="left"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accessionTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/five"
                android:text="@string/user_id"
                android:textColor="@color/HeaderTitleColor"
                android:textSize="@dimen/default_text_size_one"
                attrs:TypeFace="@string/Bold" />

            <EditText
                android:id="@+id/userIDETID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_modify_states"
                android:singleLine="true"
                android:textAllCaps="true"
                android:inputType="textCapCharacters"
                android:padding="@dimen/ten"
                android:textSize="@dimen/default_text_size_one" />

            <TextView
                android:id="@+id/firstNameTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:padding="@dimen/five"
                android:text="@string/password_label"
                android:textColor="@color/HeaderTitleColor"
                android:textSize="@dimen/default_text_size_one" />

         <!--   <EditText
                android:id="@+id/passwordETID1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_modify_states"
                android:inputType="textPassword"
                android:gravity="center"
                android:password="true"
                android:padding="@dimen/ten"
                android:maxLines="1"
                android:textSize="@dimen/default_text_size_one" />-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/etPasswordLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/passwordETID"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/edittext_modify_states"
                    android:inputType="textPassword"
                    android:padding="8dp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty"
                android:background="@color/darkblue"
                android:orientation="vertical">


                <Button
                    android:id="@+id/autheniticateBTNID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/emptycolor"
                    android:padding="@dimen/padding_ten"
                    android:text="@string/authenticate_mem"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_size_one" />
            </LinearLayout>


        </LinearLayout>


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:layout_gravity="center_vertical|center"
                android:background="@color/divider" />

            <Button
                android:id="@+id/orBTNID"
                android:layout_width="@dimen/fourty"
                android:layout_height="@dimen/fourty"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"

                android:background="@drawable/circle"
                android:padding="@dimen/five"
                android:text="@string/or_label"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/fourteen" />


        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:gravity="center"
            android:padding="@dimen/five"
            android:text="@string/if_mem_accont"
            android:textColor="@color/grey"
            android:textSize="@dimen/txt_size_book_now" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="@color/ligthblue"
            android:orientation="vertical">


            <Button
                android:id="@+id/registerBTNID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/emptycolor"
                android:padding="@dimen/padding_ten"
                android:text="@string/register_new_mem"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_one" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:gravity="center"
            android:padding="@dimen/five"
            android:text="@string/after_success"
            android:textColor="@color/grey"
            android:textSize="@dimen/txt_size_book_now" />
    </LinearLayout>


</ScrollView>
