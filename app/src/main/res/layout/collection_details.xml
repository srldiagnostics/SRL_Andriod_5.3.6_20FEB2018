<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    tools:context="com.srllimited.srl.Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightgrey"
            android:orientation="vertical"
            android:padding="@dimen/default_padding_two">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collection_address"
                    android:textSize="14dp" />


                <include layout="@layout/mandatory" />
            </LinearLayout>

            <EditText
                android:id="@+id/collection_address_edittext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_modify_states"
                android:hint="@string/address_hint"
                android:padding="@dimen/default_padding_one"
                android:textSize="14dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin_ledt"
                android:layout_marginTop="@dimen/layout_margin_default"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/collection_state"
                            android:textSize="14dp" />

                        <include layout="@layout/mandatory" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/collection_state_editext"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:background="@drawable/edittext_modify_states"
                        android:clickable="true"
                        android:padding="@dimen/default_padding_one" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_ledt"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/collection_city"
                            android:textSize="14dp" />


                        <include layout="@layout/mandatory" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/collection_city_editext"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext_modify_states"
                        android:clickable="true"
                        android:padding="@dimen/default_padding_one" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_default">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collection_postal_Code"
                    android:textSize="14dp" />


                <include layout="@layout/mandatory" />
            </LinearLayout>

            <EditText
                android:id="@+id/collection_postal_code_editext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_modify_states"
                android:clickable="true"
                android:padding="@dimen/default_padding_one" />

            <CheckBox
                android:id="@+id/collection_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_default"
                android:buttonTint="@android:color/darker_gray"
                android:text="@string/collection_checkbox_text"
                android:textColor="@android:color/darker_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_default"

                android:background="@drawable/edittext_modify_states">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_padding_two"
                    android:text="@string/collection_date_time"
                    android:textSize="@dimen/default_text_size_two" />


                <include layout="@layout/mandatory" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_default"
                android:background="@drawable/edittext_modify_states"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_margin="@dimen/default_margin_ledt"
                    android:background="@drawable/date_icon"
                    android:scaleType="centerInside" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="@color/lightgrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_margin_default"
                    android:text="Select"
                    android:textColor="@color/lightgrey"
                    android:textSize="18dp" />


                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="@dimen/default_margin_ledt"
                    android:background="@drawable/drop_down_icon"
                    android:scaleType="centerInside" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/default_margin_ledt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_default"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/default_margin_ledt"
                    android:background="@drawable/edittext_modify_states"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_margin="@dimen/default_margin_ledt"
                        android:background="@drawable/time_icon"
                        android:scaleType="centerInside" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="fill_parent"
                        android:background="@color/lightgrey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/layout_margin_default"
                        android:text="Select"
                        android:textColor="@color/lightgrey"
                        android:textSize="18dp" />


                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="@dimen/default_margin_ledt"
                        android:background="@drawable/drop_down_icon"
                        android:scaleType="centerInside" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_default"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/default_margin_ledt"
                    android:background="@drawable/edittext_modify_states"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_margin="@dimen/default_margin_ledt"
                        android:background="@drawable/time_icon"
                        android:scaleType="centerInside" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="fill_parent"
                        android:background="@color/lightgrey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/layout_margin_default"
                        android:text="Select"
                        android:textColor="@color/lightgrey"
                        android:textSize="18dp" />


                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="@dimen/default_margin_ledt"
                        android:background="@drawable/drop_down_icon"
                        android:scaleType="centerInside" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <include
        layout="@layout/roundcorner_progressview"
        />
</android.support.design.widget.CoordinatorLayout>