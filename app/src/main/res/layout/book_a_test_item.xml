<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_row_hover_start_color"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:padding="10dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/default_margin_ledt"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/ten"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/default_margin_ledt"
                android:paddingLeft="@dimen/default_margin_ledt"

                android:paddingRight="@dimen/default_margin_ledt">


                <TextView
                    android:id="@+id/book_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="9141U823"
                    android:textSize="@dimen/txt_size_book_now"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/book_test_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arsenic, 24 HR URINE"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/book_test_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.7"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/infoicon"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="1.5"
                        android:src="@drawable/infos"/>

                    <LinearLayout
                        android:id="@+id/layout_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"

                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/book_original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/small_text_size"

                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/book_default_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/strike_line"

                            android:textColor="@color/list_item_title"
                            android:textSize="@dimen/small_text_size"/>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="8dp"
                        android:layout_toLeftOf="@+id/test_done"
                        android:layout_weight="1.3"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <LinearLayout

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/red_color_circle"
                            android:gravity="center"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:id="@+id/book_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="20%"
                                android:textColor="@color/white"
                                android:textSize="@dimen/small_text_size"/>

                            <TextView
                                android:id="@+id/book_percentage_off"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="off"
                                android:textColor="@color/white"
                                android:textSize="@dimen/small_text_size"
                                />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/my_cart_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/default_margin_ledt">

                        <TextView
                            android:id="@+id/cart_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:text="\u20B9 2400"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/default_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:background="@drawable/strike_line"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/list_item_title"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold"/>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_padding_default"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/default_image_size_four"
                            android:layout_height="@dimen/default_image_size_four"
                            android:layout_gravity="center_vertical|right"
                            android:scaleType="centerInside"
                            android:src="@drawable/remove_icon"/>


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgrey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/default_margin_ledt"
            android:gravity="center"
            android:paddingRight="10dp"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/default_margin_ledt">
                <TextView
                android:id="@+id/txtVisitRequire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:scaleType="fitCenter"
                android:text=""
                android:textAllCaps="false"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_gravity="center_vertical|end"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingLeft="@dimen/default_margin_ledt">
            <Button
                android:id="@+id/add_test_icon"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:background="@drawable/add_cart_rectangle"
                android:gravity="center"

                android:scaleType="fitCenter"
                android:text="Add"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />


            <Button
                android:id="@+id/test_done"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:background="@drawable/add_cart_rectangle"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone"
               />
                </LinearLayout>
</LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_toLeftOf="@+id/showdetails_layout"
                android:background="@color/bg_color_book_now"/>

            <FrameLayout
                android:id="@+id/showdetails_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:clickable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawer_normal"/>

                <ImageView
                    android:layout_width="@dimen/default_image_size_four"
                    android:layout_height="@dimen/default_image_size_four"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="@dimen/default_margin_ledt"
                    android:gravity="bottom"
                    android:scaleType="centerInside"
                    android:src="@drawable/show_details_icon"
                    android:text="@string/book_show_details"
                    android:textSize="@dimen/default_text_size_one"
                    android:visibility="gone"/>
            </FrameLayout>


            <include

                layout="@layout/book_a_test_expanded_item"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>